# Sample deploy.config for the new unified configuration system
# This single file replaces the old config.json + application-specific deploy.config

# Application Configuration (required)
target_repo_url=https://github.com/ahauter/chex.git
allowed_branches=main,develop
secret=sample-webhook-secret-for-testing

# Application Deployment Settings
build_command=go build -o myapp .
run_command=./myapp
working_dir=./
environment=production
port=8080
restart_delay=5
max_restarts=3

# BinaryDeploy Configuration (optional - all have defaults)
